@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @*@Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            <a href="@Url.Action("Index", "Manage", routeValues: null)"><i class="fas fa-hand-scissors"></i> Hola @User.Identity.GetUserName()!</a>
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @*@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })*@
            <a href="@Url.Action("Register", "Account", routeValues: null)"><i class="fas fa-address-card"></i> Registrarse</a>
        </li>
        <li>
            @*@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
            <a href="@Url.Action("Login", "Account", routeValues: null)"><i class="fas fa-user"></i> Iniciar sesión</a>
        </li>
</ul>
}
