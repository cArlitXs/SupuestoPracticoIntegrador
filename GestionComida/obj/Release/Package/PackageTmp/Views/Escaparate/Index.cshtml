@model IEnumerable<GestionComida.Models.Producto>

@{
    ViewBag.Title = "Inicio";
}

<link href="https://unpkg.com/bootstrap@4.1.0/dist/css/bootstrap-grid.min.css" rel="stylesheet" />
<style>
    .ellip p {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

@*<h2>Productos</h2>*@

<hr>

<div class="row">
    <div class="col-lg-3 col-md-12 col-sm-12 thumbnail ellip">
        <h4>Categorías</h4>
        <hr />
        @foreach (var c in ViewBag.Categorias)
        {
            <div class="ellip">
                @*@Html.ActionLink(@c.Descripcion, "Index", new { id = c.Id })*@
                <p><a href="~/Escaparate/Index/@c.Id"><i class="far fa-circle"></i> @c.Descripcion</a></p>
            </div>
        }
    </div>

    <div class="col-md">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="thumbnail">
                        <img src="@Html.DisplayFor(modelItem => item.Descripcion)" alt="@Html.DisplayFor(modelItem => item.Descripcion)">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => item.Nombre)</h3>
                            @*<p><a href="#" class="btn btn-primary" role="button">Comprar</a></p>*@
                            @*@Html.ActionLink("Comprar", "Agregar", "Carrito", new { id = item.Id }, new { @class = "btn btn-primary" })*@
                            @if (Request.IsAuthenticated)
                            {
                                if (!User.IsInRole("Administrador"))
                                {
                                    <a href="@Url.Action("Agregar", "Carrito", new { id = item.Id })" class="btn btn-primary"><i class="fas fa-shopping-basket"></i> Comprar</a>
                                }
                            }
                            else
                            {
                                
                                <a href="@Url.Action("Agregar", "Carrito", new { id = item.Id })" class="btn btn-primary"><i class="fas fa-shopping-basket"></i> Comprar</a>
                            }
                            <hr />
                            <small>@Html.DisplayFor(modelItem => item.Categoria.Descripcion)</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

